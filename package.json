{
  "name": "htmx-preact",
  "module": "src/index.tsx",
  "type": "module",
  "scripts": {
    "devv": "bunx concurrently 'bun build:w' 'bun start:w'",
    "start": "bun run --tsconfig-override src/backend/tsconfig.json src/index.ts",
    "start:w": "bun run --watch --tsconfig-override src/backend/tsconfig.json src/index.ts",
    "build": "bun run --tsconfig-override src/frontend/tsconfig.json src/bundle.ts",
    "build:w": "bun run --tsconfig-override src/frontend/tsconfig.json src/bundle.ts --watch"
  },
  "devDependencies": {
    "@types/preact-custom-element": "^4.0.1",
    "bun-types": "latest",
    "concurrently": "^8.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/html": "^0.6.0",
    "@elysiajs/static": "^0.6.0",
    "@elysiajs/swagger": "^0.6.1",
    "@preact/compat": "^17.1.2",
    "chokidar": "^3.5.3",
    "elysia": "^0.6.11",
    "glob": "^10.3.3",
    "htmx.org": "^1.9.5",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "preact": "^10.17.1",
    "preact-custom-element": "^4.2.1",
    "typed-html": "^3.0.1"
  }
}
